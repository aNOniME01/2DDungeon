<Page x:Class="WPFDungeon.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFDungeon"
      mc:Ignorable="d" 
      d:DesignHeight="280" d:DesignWidth="300"
      Title="MainMenu">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Content="Start" Style="{DynamicResource DarkCorner8}"
                    Height="50" Width="150" Margin="5"
                    Click="Button_Click"/>
            <Button Content="Scoreboard" Style="{DynamicResource DarkCorner8}"
                    Height="50" Width="150" 
                    Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Page>
