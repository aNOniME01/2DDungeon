<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Light" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#DEE2E6"/>
        <Setter Property="FontFamily" Value="\Prefabs\Fonts\Dosis.ttf"/>
    </Style>
    
    <Style x:Key="Dark" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="\Prefabs\Fonts\Dosis.ttf"/>
    </Style>
    
    <Style x:Key="Error" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#e71d36"/>
        <Setter Property="FontFamily" Value="\Prefabs\Fonts\Dosis.ttf"/>
    </Style>
    
    <Style x:Key="Score" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="\Prefabs\Fonts\Dosis.ttf"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        
    </Style>

</ResourceDictionary>